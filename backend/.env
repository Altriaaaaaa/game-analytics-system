# 服务器配置
PORT=3000
NODE_ENV=development

# ==================== 大数据组件开关 ====================

# HDFS 配置（设置为 true 启用）
USE_HDFS=false
HDFS_HOST=localhost
HDFS_PORT=50070
HDFS_USER=hadoop

# MongoDB 配置（设置为 true 启用）
USE_MONGODB=true
MONGODB_URI=mongodb://localhost:27017

# MapReduce 配置（默认启用）
USE_MAPREDUCE=true

# ==================== 部署场景 ====================

# 场景1：纯内存模式（快速开发）
# USE_HDFS=false
# USE_MONGODB=false
# USE_MAPREDUCE=true

# 场景2：使用 MongoDB 缓存（推荐）
# USE_HDFS=false
# USE_MONGODB=true
# USE_MAPREDUCE=true

# 场景3：完整大数据栈
# USE_HDFS=true
# USE_MONGODB=true
# USE_MAPREDUCE=true